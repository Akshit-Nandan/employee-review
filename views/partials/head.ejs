<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    
    <% if(isAdmin) { %>
    <div class="d-flex flex-row col-12 bg-danger justify-content-between mb-3" style="height: 38px;">
        <div class="d-flex flex-row col-3" style="font-size:18px">
            <b>Employee Review Manager System</b>
        </div>
        <div class="d-flex flex-row col-9 bg-danger justify-content-end">
            <button class="mx-3 col-2 bg-success border border-success" onclick="AddEmployee()">Add Employees</button>
            <button class="mx-3 col-2 bg-success border border-success" onclick="showEmployee()">All Employees</button>
            <button class="mx-3 col-2 bg-success border border-success" onclick="myReviews('/admin/myReviews')">My Reviews</button>
            <button class="mx-3 col-2 bg-success border border-success "  onclick="logOut()">Log Out</button>
        </div>
    </div>
    <% } else { %>
    <div class="d-flex flex-row col-12 bg-danger justify-content-between mb-3" style="height: 30px;">
        <div class="d-flex flex-row col-2" style="font-size:16px">
            <b>Employee Review Manager System</b>
        </div>
        <div class="d-flex flex-row col-10 bg-danger justify-content-end">
            
            <button class="mx-3 col-1 bg-success border border-success" onclick="myReviews('/employee/myReviews')">My Reviews</button>
            <button class="mx-3 col-1 bg-success border border-success" onclick="logOut()">Log Out</button>
        </div>
    </div>
    <% } %>
    <script>
        function logOut(){
            fetch("/logout")
            .then((res)=>{ if (res.redirected) {
            window.location.href = res.url;
        }console.log("Logged out successfuly");console.log(res)})
            .catch(err=>console.log(err))
        }
        function myReviews(){
            const url='/myReviews'
            fetch(url).then((res)=>{ if (res.redirected) {
            window.location.href = res.url;
        }console.log("Redirectd to showMyReviews Employee");console.log(res)})
            .catch(err=>console.log(err))
            // .catch(err=>console.log(err))
        }
      
        function showEmployee(){
            fetch("/admin")
            .then((res)=>{ if (res.redirected) {
            window.location.href = res.url;
        }console.log("Moved to Show Employee");console.log(res)})
            .catch(err=>console.log(err))
        
        }
        function AddEmployee(){
            fetch('/admin/addEmployee',{
                method: 'GET',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                // body: data
            })
            .then(response => {console.log(response);return response.text()})
                .then(json => {
                    document.write(json)
                    console.log("Add Employee form rendered")
                }).catch(e => console.log(e))
        
        }
    </script>
</head>
<body>
    <%- include('flash-message') %>
