<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
</head>

<body>
    <table class="table table-striped table-primary">
        <thead>
            <tr>
                <th class="bg-danger text-center border border-2">Name</th>
                <th class="bg-danger text-center border border-2">Email</th>
                <th class="bg-danger text-center border border-2">Password</th>
                <th class="bg-danger text-center border border-2">Is Admin</th>
                <th class="bg-danger text-center border border-2">Functions</th>
            </tr>
        </thead>
        <tbody>
            <%if (records.length>0){ %>
                <% records.forEach(function(row){ %>
                    <tr>
                        <td class="text-center border border-2">
                            <%= row.name %>
                        </td>
                        <td class="text-center border border-2">
                            <%= row.email %>
                        </td>
                        <td class="text-center border border-2">
                            <%= row.password %>
                        </td>
                        <td class="text-center border border-2">
                            <%= row.admin %>
                        </td>
                        <td class="d-flex flex-row justify-content-evenly text-center border border-2">
                          <button style="border:none" onclick="removerow(`<%= row._id %>`)" id="rembtn" class="bg-danger">Delete</button>
                          <button style="border:none" onclick="assignrev()" id="reviewbtn" class="bg-danger">Assign Review</button>
                          <button style="border:none" onclick="edit()" id="editbtn" class="bg-danger">Edit User</button>

                        </td>
                    </tr>
                    <% })}else{ %>
                        <tr>
                            <td colspan="6">No Record Found</td>

                        </tr>
                        <% } %>
        </tbody>
    </table>
    <script>
        function removerow(id) {
            id = id.trim();
            let a = document.getElementById("rembtn");
            data = JSON.stringify({ id: id });
            fetch('/admin/remEmployee', {
                method: 'POST',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                body: data
            })
                .then((response) =>
                    response.json()
                )
                .then((data) => {
                    if (data.successful) a.parentElement.parentElement.remove();
                    else alert('Deletion Failed !')
                });

        }
    </script>
</body>

</html>
