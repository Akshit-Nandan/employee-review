<%- include('../partials/head') %>
        <div class="d-flex flex-column container col-4">
          <form class=" mt-3 border border-danger p-5 " 
            action="update-employee" 
            method="POST">
            <h2 class="text-center">Emloyee details</h2>
            <div>
              <label class="form-label" for="name">User Name</label>
              <input type="text" id="name" name="name" class="form-control" value="<%= emp.name %>" required />
            </div>
            
            <div>
              <label class="form-label" for="email">Email</label>
              <input type="email" id="email" name="email" class="form-control" value="<%= emp.email %>" readonly required />
            </div>

            <div class="p-2">
              <label class="form-label text-danger" for="admin">Is Admin</label>
              <input type="checkbox" id="admin" name="admin" checked="<%= emp.admin%>" >

            </div>
