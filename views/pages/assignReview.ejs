<%- include('../partials/head') %>
    <div class="d-flex flex-column container col-4 bg-dark">
      <form
        class="mt-3 p-5"
        action="assign-review-task?id=<%= email %>"
        method="POST">
        <h2 class="text-center text-white">Review From <%= name %></h2>
        <div>
          <label class="form-label mt-4 mb-4 text-white" for="name">Review For:</label>   
          <select id="reviewFor" name="reviewFor" class="bg-danger text-white border border-dark" required>
            <%if (records.length>0){ %>
              <% records.forEach(function(row){ %>
              <%if( email == row.email) return %>
              <option value="<%= row.email %>"><%= row.name %> </option>
              <% })} %>
          </select>
        </div>
        <div>
          <div class="d-flex flex-row justify-content-evenly">
            <button type="submit" value="Submit" class="btn btn-danger col-5 mb-3">Assign</button>
            <button type="button" onclick="location.reload()" value="Return" class="btn btn-danger col-5 mb-3">Back</button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
